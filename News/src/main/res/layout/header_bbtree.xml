<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/iv_bg1"
            android:layout_width="match_parent"
            android:src="@mipmap/bg_header_grass"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_bg2"
            android:layout_width="match_parent"
            android:src="@mipmap/bg_header_grass"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_stretch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            />
        <!-- 动画 显示的imageview-->
        <ImageView
            android:id="@+id/iv_heade_baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/tv_stretch"
            />

        <LinearLayout
            android:id="@+id/ptr_classic_header_rotate_view_header_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ptr_classic_header_rotate_view_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/ptr_classic_header_rotate_view_header_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#999999"
                android:textSize="11dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>